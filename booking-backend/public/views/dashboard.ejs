<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      background-color: #f5f8fa;
    }

    .sidebar {
      position: fixed;
      height: 100vh;
      width: 240px;
      background-color: #F4B86F;
      color: white;
      padding: 30px 20px;
    }

    .sidebar h4 {
      text-align: center;
      margin-bottom: 40px;
    }

    .sidebar ul {
      list-style: none;
      padding-left: 0;
    }

    .sidebar ul li {
      margin: 20px 0;
    }

    .sidebar ul li a {
      color: white;
      text-decoration: none;
      font-weight: 500;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .sidebar ul li a:hover {
      text-decoration: underline;
    }

    .main {
      margin-left: 260px;
      padding: 40px;
    }

    .main h2 {
      font-weight: 600;
      margin-bottom: 30px;
    }

    .card {
      border: none;
      border-radius: 10px;
    }

    .badge {
      padding: 6px 12px;
      font-size: 0.9rem;
    }

    .btn-sm {
      font-size: 0.8rem;
    }

    .table td, .table th {
      vertical-align: middle;
    }

    .action-btns form {
      display: inline;
    }

    .download-buttons {
      margin-bottom: 20px;
    }

    .download-buttons .btn {
      margin-right: 10px;
    }

    .logo {
      text-align: center;
      margin-bottom: 30px;
    }

    .logo img {
      max-width: 120px;
    }
  </style>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
</head>
<body>

  <div class="sidebar">
    <div class="logo">
      <img src="../../../assets/logo2.svg" alt="Admin Logo">
    </div>
    <h4>Admin Dashboard</h4>
    <ul>
      <li><a href="/admin/dashboard"><i class="fas fa-calendar-check"></i> Bookings</a></li>
      <li><a href="/admin/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
    </ul>
  </div>

  <div class="main">
    <h2>Bookings Management</h2>

    <div class="download-buttons">
      <button onclick="downloadExcel()" class="btn btn-outline-success btn-sm"><i class="fas fa-file-excel"></i> Excel</button>
      <button onclick="downloadPDF()" class="btn btn-outline-primary btn-sm"><i class="fas fa-file-pdf"></i> PDF</button>
    </div>

    <div class="card shadow-sm">
      <div class="card-body p-0">
        <table class="table table-striped" id="bookingTable">
          <thead class="table-light">
            <tr>
              <th>Name</th><th>Email</th><th>Phone</th><th>Event</th><th>Package</th><th>Date</th><th>Status</th><th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (bookings.length > 0) { %>
              <% bookings.forEach(b => { %>
                <tr>
                  <td><%= b.name %></td>
                  <td><%= b.email %></td>
                  <td><%= b.phone %></td>
                  <td><%= b.eventType %></td>
                  <td><%= b.package %></td>
                  <td><%= b.date %></td>
                  <td>
                    <span class="badge bg-<%= b.status === 'Pending' ? 'warning' : (b.status === 'Approved' ? 'success' : 'danger') %>">
                      <%= b.status %>
                    </span>
                  </td>
                  <td class="action-btns">
                    <form action="/admin/booking/status/<%= b._id %>" method="POST">
                      <button name="status" value="Approved" class="btn btn-success btn-sm">âœ”</button>
                      <button name="status" value="Rejected" class="btn btn-danger btn-sm">âœ–</button>
                    </form>
                    <a href="/admin/booking/edit/<%= b._id %>" class="btn btn-warning btn-sm">âœŽ</a>
                    <form action="/admin/booking/delete/<%= b._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this booking?')">
                        <button type="submit" class="btn btn-danger btn-sm">ðŸ—‘ Delete</button>
                      </form>
                      
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr><td colspan="8" class="text-center">No bookings found.</td></tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script>
    function downloadExcel() {
      const table = document.getElementById("bookingTable");
      const wb = XLSX.utils.table_to_book(table);
      XLSX.writeFile(wb, "bookings.xlsx");
    }

    async function downloadPDF() {
      const { jsPDF } = window.jspdf;
      const doc = new jsPDF();
      doc.text("Booking Data", 10, 10);
      doc.autoTable({ html: "#bookingTable" });
      doc.save("bookings.pdf");
    }
  </script>
</body>
</html>
