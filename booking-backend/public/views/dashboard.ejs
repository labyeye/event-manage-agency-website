<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      background-color: #f5f8fa;
    }
    .sidebar {
      background-color: #F4B86F;
      color: white;
    }
    .sidebar a {
      color: white;
      text-decoration: none;
      font-weight: 500;
      display: flex;
      align-items: center;
      gap: 10px;
    }
    .sidebar a:hover {
      text-decoration: underline;
    }
    .main h2 {
      font-weight: 600;
      margin-bottom: 30px;
    }
    .card {
      border: none;
      border-radius: 10px;
    }
    .badge {
      padding: 6px 12px;
      font-size: 0.9rem;
    }
    .btn-sm {
      font-size: 0.8rem;
    }
    .table-responsive {
      overflow-x: auto;
    }
    .logo img {
      max-width: 120px;
    }
  </style>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.25/jspdf.plugin.autotable.min.js"></script>
</head>
<body>

<!-- Responsive Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light d-md-none">
  <div class="container-fluid">
    <a class="navbar-brand" href="#"><img src="../../../assets/logo2.svg" height="40" alt="Logo"></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu">
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>
</nav>

<!-- Sidebar -->
<div class="offcanvas offcanvas-start d-md-flex flex-column flex-shrink-0 p-3 sidebar position-static" tabindex="-1" id="sidebarMenu">
  <div class="offcanvas-header d-md-none">
    <h5 class="offcanvas-title">Admin Dashboard</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
  </div>
  <div class="text-center logo mb-4">
    <img src="../../../assets/logo2.svg" alt="Admin Logo">
  </div>
  <h4 class="text-center d-none d-md-block">Admin Dashboard</h4>
  <ul class="nav flex-column mt-4">
    <li class="nav-item"><a href="/admin/dashboard"><i class="fas fa-calendar-check"></i> Bookings</a></li>
    <li class="nav-item"><a href="/admin/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
  </ul>
</div>

<!-- Main Content -->
<div class="main container-fluid mt-4 mt-md-0" style="margin-left: 0; padding-left: 1rem; padding-right: 1rem;">
  <h2>Bookings Management</h2>

  <div class="download-buttons mb-3">
    <button onclick="downloadExcel()" class="btn btn-outline-success btn-sm"><i class="fas fa-file-excel"></i> Excel</button>
    <button onclick="downloadPDF()" class="btn btn-outline-primary btn-sm"><i class="fas fa-file-pdf"></i> PDF</button>
  </div>

  <div class="card shadow-sm">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-striped mb-0" id="bookingTable">
          <thead class="table-light">
            <tr>
              <th>Name</th><th>Email</th><th>Phone</th><th>Event</th><th>Package</th><th>Date</th><th>Status</th><th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (bookings.length > 0) { %>
              <% bookings.forEach(b => { %>
                <tr>
                  <td><%= b.name %></td>
                  <td><%= b.email %></td>
                  <td><%= b.phone %></td>
                  <td><%= b.eventType %></td>
                  <td><%= b.package %></td>
                  <td><%= b.date %></td>
                  <td>
                    <span class="badge bg-<%= b.status === 'Pending' ? 'warning' : (b.status === 'Approved' ? 'success' : 'danger') %>">
                      <%= b.status %>
                    </span>
                  </td>
                  <td class="action-btns">
                    <form action="/admin/booking/status/<%= b._id %>" method="POST" class="d-inline">
                      <button name="status" value="Approved" class="btn btn-success btn-sm">âœ”</button>
                      <button name="status" value="Rejected" class="btn btn-danger btn-sm">âœ–</button>
                    </form>
                    <a href="/admin/booking/edit/<%= b._id %>" class="btn btn-warning btn-sm">âœŽ</a>
                    <form action="/admin/booking/delete/<%= b._id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this booking?')">
                      <button type="submit" class="btn btn-danger btn-sm">ðŸ—‘ Delete</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr><td colspan="8" class="text-center">No bookings found.</td></tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script>
  function downloadExcel() {
    const table = document.getElementById("bookingTable");
    const wb = XLSX.utils.table_to_book(table);
    XLSX.writeFile(wb, "bookings.xlsx");
  }

  async function downloadPDF() {
    const { jsPDF } = window.jspdf;
    const doc = new jsPDF();
    doc.text("Booking Data", 10, 10);
    doc.autoTable({ html: "#bookingTable" });
    doc.save("bookings.pdf");
  }
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
